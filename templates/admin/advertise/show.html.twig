{% extends 'admin/dashboard.html.twig' %}

{% block title %}{{ advertise.title }}{% endblock %}

{% block in_body %}
<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900">{{ advertise.title }}</h1>
        <div class="flex space-x-3">
            <a href="{{ path('app_advertise_index') }}" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Retour à la liste
            </a>
            <a href="{{ path('app_advertise_edit', {'id': advertise.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-yellow-700 hover:bg-yellow-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                </svg>
                Modifier
            </a>
        </div>
    </div>

    <div class="bg-white shadow rounded-lg overflow-hidden mb-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-0">
            <!-- Image Section -->
            <div class="md:col-span-1 bg-gray-100 p-6 flex items-center justify-center">
                {% if advertise.imageUrl %}
                    <img src="{{ vich_uploader_asset(advertise, 'imageFile') }}" alt="Image publicitaire" class="max-h-80 w-auto object-contain rounded-lg shadow-md">
                {% else %}
                    <div class="text-center text-gray-500">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <p class="mt-2">Aucune image disponible</p>
                    </div>
                {% endif %}
            </div>

            <!-- Details Section -->
            <div class="md:col-span-2 p-6">
                <div class="mb-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-2">Description</h2>
                    <p class="text-gray-700 whitespace-pre-line">{{ advertise.description }}</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Entreprise</h3>
                        <p class="mt-1 text-sm text-gray-900">{{ advertise.company ?? 'Non renseigné' }}</p>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Téléphone</h3>
                        <p class="mt-1 text-sm text-gray-900">{{ advertise.phoneNumber ?? 'Non renseigné' }}</p>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Email</h3>
                        <p class="mt-1 text-sm text-gray-900">{{ advertise.email ?? 'Non renseigné' }}</p>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">URL de l'image</h3>
                        <p class="mt-1 text-sm text-gray-900 break-all">{{ advertise.imageUrl ?? 'Non renseigné' }}</p>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Date de création</h3>
                        <p class="mt-1 text-sm text-gray-900">{{ advertise.createdAt ? advertise.createdAt|date('d/m/Y H:i') : 'Non renseigné' }}</p>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Dernière modification</h3>
                        <p class="mt-1 text-sm text-gray-900">{{ advertise.updatedAt ? advertise.updatedAt|date('d/m/Y H:i') : 'Non modifié' }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-6 py-4 bg-yellow-700">
            <h3 class="text-lg font-medium text-white">Actions</h3>
        </div>
        <div class="px-6 py-4 flex justify-between items-center">
            <div class="text-sm text-gray-500">
                ID: {{ advertise.id }}
            </div>
            <div class="flex space-x-3">
                <a href="{{ path('app_advertise_edit', {'id': advertise.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-yellow-700 hover:bg-yellow-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500">
                    Modifier cette publicité
                </a>
                {{ include('admin/advertise/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
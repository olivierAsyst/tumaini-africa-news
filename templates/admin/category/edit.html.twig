{% extends 'admin/dashboard.html.twig' %}

{% block title %}Categorie {{ category.name}} {% endblock %}

{% block in_body %}

<section class="w-full dark:bg-gray-900 py-1 sm:py-2">
  <div class="mx-auto max-w-screen-2xl lg:px-6">
      <div class="relative overflow-hidden bg-white shadow-md dark:bg-gray-800 sm:rounded-lg">
        <h5 class="text-center mb-2 text-2xl font-semibold dark:text-white">
            <span class="bg-gradient-to-r from-orange-500 to-red-800 text-transparent bg-clip-text">Modifier la cat√©gorie {{ category.name }}</span></h5>
        </h5>
        <section class="bg-white dark:bg-gray-900">
        <div class="py-8 px-4 mx-auto max-w-2xl lg:py-16">
        {{ form_start(form) }}
            <div>
                {{ form_label(form.name, 'Nom de la categorie', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-yellow-600 focus:border-yellow-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-yellow-500 dark:focus:border-yellow-500'}}) }}
                {{ form_errors(form.name, {'attr': {'class': 'text-red-500 text-sm'}}) }}
            </div>
            <div>
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-yellow-600 focus:border-yellow-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-yellow-500 dark:focus:border-yellow-500'}}) }}
                {{ form_errors(form.description, {'attr': {'class': 'text-red-500 text-sm'}}) }}
            </div>
            <div class="flex gap-5 items-center">
                <a href="{{ path('app_category_index') }}">
                    <svg class="w-6 h-6 text-orange-700 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M14.502 7.046h-2.5v-.928a2.122 2.122 0 0 0-1.199-1.954 1.827 1.827 0 0 0-1.984.311L3.71 8.965a2.2 2.2 0 0 0 0 3.24L8.82 16.7a1.829 1.829 0 0 0 1.985.31 2.121 2.121 0 0 0 1.199-1.959v-.928h1a2.025 2.025 0 0 1 1.999 2.047V19a1 1 0 0 0 1.275.961 6.59 6.59 0 0 0 4.662-7.22 6.593 6.593 0 0 0-6.437-5.695Z"/>
                    </svg>
                </a>
                <button type="submit" class="cursor-pointer inline-flex items-center px-5 py-2.5 mt-4 sm:mt-6 text-sm font-medium text-center text-white bg-yellow-700 rounded-lg focus:ring-4 focus:ring-yellow-200 dark:focus:ring-yellow-900 hover:bg-yellow-800">
                    Mettre a jour
                </button>
            </div>
            {{ form_end(form) }}
            {{ include('admin/category/_delete_form.html.twig') }}
        </div>
      </section>
      </div>
    </div>
</section>

    {# <a href="{{ path('app_category_index') }}">back to list</a> #}

    
{% endblock %}

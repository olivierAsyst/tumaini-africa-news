{% extends 'admin/dashboard.html.twig' %}

{% block title %}Les Catégories{% endblock %}

{% block in_body %}

    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <h1>Les Categories</h1>
    <a href="{{ path('app_category_new') }}" class="font-medium text-green-700 dark:text-green-500 hover:underline">Ajouter un nouveau</a>
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        n°
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Nom
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Description
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700 border-gray-200">
                    <td class="px-6 py-4">
                        {{ category.id }}
                    </td>
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{ category.name }}
                    </th>
                    <td class="px-6 py-4">
                        {{ category.description }}
                    </td>
                    <td class="px-6 py-4 flex items-center gap-4">
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Modifier</a>
                    </td>
                </tr>
                {% else %}
                    <tr>
                        <td class="px-6 py-4">Aucune categorie pour le moment</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    
{% endblock %}

{% extends 'admin/dashboard.html.twig' %}

{% block title %}Audio{% endblock %}

{% block in_body %}
    <h1>Audio</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ audio.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ audio.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ audio.description }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>
                    <audio controls>
                        <source src="{{ vich_uploader_asset(audio, 'audioFile') }}" type="audio/mp3">
                        Your browser does not support the audio element.
                    </audio>
                </td>
            </tr>
            <tr>
                <th>Cover</th>
                <td><img src="{{ vich_uploader_asset(audio, 'coverFile') }}" alt="{{ audio.title }}"/></td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ audio.duration }}</td>
            </tr>
            <tr>
                <th>PublishedAt</th>
                <td>{{ audio.publishedAt ? audio.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ audio.createdAt ? audio.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ audio.updatedAt ? audio.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ audio.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_audio_index') }}">back to list</a>

    <a href="{{ path('app_audio_edit', {'id': audio.id}) }}">edit</a>

    {{ include('admin/audio/_delete_form.html.twig') }}
{% endblock %}

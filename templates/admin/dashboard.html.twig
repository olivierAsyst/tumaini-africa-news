                            <button id="dropdownRadioButton" data-dropdown-toggle="dropdownRadio" class="inline-flex items-center text-gray-500 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-3 py-2 dark:bg-gray-700 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700" type="button">
                                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M10 0a10 10 0 1 0 10 10A10.011 10.011 0 0 0 10 0Zm3.982 13.982a1 1 0 0 1-1.414 0l-3.274-3.274A1.012 1.012 0 0 1 9 10V6a1 1 0 0 1 2 0v3.586l2.982 2.982a1 1 0 0 1 0 1.414Z"/>
                                </svg>
                                Derniers 30 jours
                                <svg class="w-2.5 h-2.5 ms-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
                
                <div class="overflow-x-auto">
                    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                            <tr>
                                <th scope="col" class="px-6 py-3">Titre</th>
                                <th scope="col" class="px-6 py-3">Statut</th>
                                <th scope="col" class="px-6 py-3">Date</th>
                                <th scope="col" class="px-6 py-3">Vues</th>
                                <th scope="col" class="px-6 py-3">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if articles|length > 0 %}
                                {% for article in articles %}
                                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                        {{ article.title }}
                                    </th>
                                    <td class="px-6 py-4">
                                        <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Publié</span>
                                    </td>
                                    <td class="px-6 py-4">{{ article.createdAt|date('d/m/Y') }}</td>
                                    <td class="px-6 py-4">{{ article.viewCount }}</td>
                                    <td class="px-6 py-4">
                                        <a href="{{ path('app_article_show', {'id': article.id}) }}" class="font-medium text-yellow-600 dark:text-yellow-500 hover:underline">Détails</a>
                                    </td>
                                </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="5" class="px-6 py-4 text-center text-gray-500 dark:text-gray-400">
                                        Aucun article pour le moment
                                    </td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        {# Sidebar Section #}
        <div class="lg:w-1/3 flex flex-col gap-6">
            {# Recent Podcasts #}
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-orange-500/30 dark:border-gray-700 p-4">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-xl font-bold bg-gradient-to-r from-orange-500 to-red-800 text-transparent bg-clip-text">
                        Les émissions récents
                    </h3>
                    <a href="{{ path('app_audio_index') }}" class="text-sm font-medium text-yellow-600 dark:text-yellow-400 hover:underline">
                        Voir tout
                    </a>
                </div>
                
                <ul class="divide-y divide-gray-200 dark:divide-gray-700">
                    {% if audios|length > 0 %}
                        {% for audio in audios|slice(0, 5) %}
                        <li class="py-3">
                            <div class="flex items-center gap-3">
                                <div class="shrink-0 relative">
                                    <img class="w-12 h-12 rounded-lg object-cover" src="{{ vich_uploader_asset(audio, 'coverFile') }}" alt="{{ audio.title }}">
                                    <button class="absolute inset-0 flex items-center justify-center opacity-0 hover:opacity-100 bg-black/30 rounded-lg transition-opacity">
                                        <svg class="w-6 h-6 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                                            <path fill-rule="evenodd" d="M8.6 5.2A1 1 0 0 0 7 6v12a1 1 0 0 0 1.6.8l8-6a1 1 0 0 0 0-1.6l-8-6Z" clip-rule="evenodd"/>
                                        </svg>
                                    </button>
                                </div>
                                <div class="min-w-0 flex-1">
                                    <p class="text-sm font-medium text-gray-900 truncate dark:text-white">
                                        {{ audio.title }}
                                    </p>
                                    <p class="text-sm text-gray-500 truncate dark:text-gray-400">
                                        {{ audio.description|slice(0, 30) ~ (audio.description|length > 30 ? '...' : '') }}
                                    </p>
                                </div>
                                <div class="flex gap-2">
                                    <button class="p-1 text-gray-400 hover:text-yellow-600 dark:hover:text-yellow-400">
                                        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                                            <path fill-rule="evenodd" d="M4.998 7.78C6.729 6.345 9.198 5 12 5c2.802 0 5.27 1.345 7.002 2.78a12.713 12.713 0 0 1 2.096 2.183c.253.344.465.682.618.997.14.286.284.658.284 1.04s-.145.754-.284 1.04a6.6 6.6 0 0 1-.618.997 12.712 12.712 0 0 1-2.096 2.183C17.271 17.655 14.802 19 12 19c-2.802 0-5.27-1.345-7.002-2.78a12.712 12.712 0 0 1-2.096-2.183 6.6 6.6 0 0 1-.618-.997C2.144 12.754 2 12.382 2 12s.145-.754.284-1.04c.153-.315.365-.653.618-.997A12.714 12.714 0 0 1 4.998 7.78ZM12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" clip-rule="evenodd"/>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </li>
                        {% endfor %}
                    {% else %}
                        <li class="py-3 text-center text-gray-500 dark:text-gray-400">
                            Aucun podcast disponible
                        </li>
                    {% endif %}
                </ul>
            </div>

            {# Top Categories #}
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-orange-500/30 dark:border-gray-700 p-4">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-xl font-bold bg-gradient-to-r from-orange-500 to-red-800 text-transparent bg-clip-text">
                        Top catégories
                    </h3>
                    <a href="{{ path('app_category_index') }}" class="text-sm font-medium text-yellow-600 dark:text-yellow-400 hover:underline">
                        Voir tout
                    </a>
                </div>
                
                <ul class="divide-y divide-gray-200 dark:divide-gray-700">
                    {% if categories|length > 0 %}
                        {% for category in categories|slice(0, 5) %}
                        <li class="py-3">
                            <div class="flex items-center justify-between">
                                <div class="flex-1 min-w-0">
                                    <p class="text-sm font-medium text-gray-900 truncate dark:text-white">
                                        {{ category.name }}
                                    </p>
                                    <p class="text-sm text-gray-500 truncate dark:text-gray-400">
                                        {{ category.description|slice(0, 30) ~ (category.description|length > 30 ? '...' : '') }}
                                    </p>
                                </div>
                                <span class="inline-flex items-center justify-center w-8 h-8 text-xs font-semibold text-yellow-800 bg-yellow-100 rounded-full dark:bg-gray-700 dark:text-yellow-400">
                                    {{ category.articles ? category.articles|length : 0 }}
                                </span>
                            </div>
                        </li>
                        {% endfor %}
                    {% else %}
                        <li class="py-3 text-center text-gray-500 dark:text-gray-400">
                            Aucune catégorie disponible
                        </li>
                    {% endif %}
                </ul>
            </div>

            {# Top Users #}
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-orange-500/30 dark:border-gray-700 p-4">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-xl font-bold bg-gradient-to-r from-orange-500 to-red-800 text-transparent bg-clip-text">
                        Top utilisateurs
                    </h3>
                    <a href="#" class="text-sm font-medium text-yellow-600 dark:text-yellow-400 hover:underline">
                        Voir tout
                    </a>
                </div>
                
                <ul class="divide-y divide-gray-200 dark:divide-gray-700">
                    {% if users|length > 0 %}
                        {% for user in users|slice(0, 5) %}
                        <li class="py-3">
                            <div class="flex items-center gap-3">
                                <img class="w-10 h-10 rounded-full" src="/images/default-avatar.png" alt="{{ user.firstname }} {{ user.lastname }}">
                                <div class="flex-1 min-w-0">
                                    <p class="text-sm font-medium text-gray-900 truncate dark:text-white">
                                        {{ user.firstname }} {{ user.lastname }}
                                    </p>
                                    <span class="text-xs bg-green-100 text-green-800 px-2 py-0.5 rounded dark:bg-green-900 dark:text-green-300">
                                        Admin
                                    </span>
                                </div>
                                <span class="text-xs font-semibold text-yellow-800 bg-yellow-100 rounded-full px-2 py-1 dark:bg-gray-700 dark:text-yellow-400">
                                    {{ user.articles ? user.articles|length : 0 }} articles
                                </span>
                            </div>
                        </li>
                        {% endfor %}
                    {% else %}
                        <li class="py-3 text-center text-gray-500 dark:text-gray-400">
                            Aucun utilisateur pour le moment
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% endblock %}
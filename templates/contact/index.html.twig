{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .contact-gradient {
            background: linear-gradient(135deg, rgba(245,158,11,0.1) 0%, rgba(239,68,68,0.1) 100%);
        }
        .donation-card {
            background: linear-gradient(135deg, #f59e0b 0%, #ef4444 100%);
            box-shadow: 0 10px 30px -10px rgba(239, 68, 68, 0.3);
        }
        .hover-scale {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .hover-scale:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px -5px rgba(239, 68, 68, 0.4);
        }
    </style>
{% endblock %}

{% block body %}
<!-- Hero Section -->
<div class="relative overflow-hidden">
    <div class="max-w-7xl mx-auto">
        <div class="relative z-10 pb-8 sm:pb-8 md:pb-10 lg:max-w-2xl lg:w-full lg:pb-14 xl:pb-16">
            <div class="pt-10 sm:pt-16 lg:pt-8 lg:pb-14 lg:overflow-hidden">
                <div class="mt-4 mx-auto max-w-7xl px-4 sm:mt-8 sm:px-3 md:mt-8 lg:mt-10 lg:px-6 xl:mt-14">
                    <div class="sm:text-center lg:text-left">
                        <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
                            <span class="block">Restons en</span>
                            <span class="block text-amber-600">contact</span>
                        </h1>
                        <p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
                            Nous sommes toujours ravis d'échanger avec notre communauté. Voici comment nous joindre.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contact Info Section -->
<div class="contact-gradient py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Email Card -->
            <div class="bg-white rounded-xl p-8 shadow-lg hover-scale">
                <div class="flex items-center justify-center h-12 w-12 rounded-md bg-amber-100 text-amber-600 mb-6">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                </div>
                <h3 class="text-lg font-medium text-gray-900 mb-2">Email</h3>
                <p class="text-base text-gray-500 mb-4">Pour toutes questions générales</p>
                <a href="mailto:{{ contactInfo.email }}" class="text-amber-600 hover:text-amber-800 font-medium break-all">{{ contactInfo.email }}</a>
            </div>

            <!-- Phone Card -->
            <div class="bg-white rounded-xl p-8 shadow-lg hover-scale">
                <div class="flex items-center justify-center h-12 w-12 rounded-md bg-amber-100 text-amber-600 mb-6">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                </div>
                <h3 class="text-lg font-medium text-gray-900 mb-2">Téléphone</h3>
                <p class="text-base text-gray-500 mb-4">Du lundi au vendredi</p>
                <a href="tel:{{ contactInfo.phone|replace({' ': ''}) }}" class="text-amber-600 hover:text-amber-800 font-medium">{{ contactInfo.phone }}</a>
            </div>

            <!-- Address Card -->
            <div class="bg-white rounded-xl p-8 shadow-lg hover-scale">
                <div class="flex items-center justify-center h-12 w-12 rounded-md bg-amber-100 text-amber-600 mb-6">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                </div>
                <h3 class="text-lg font-medium text-gray-900 mb-2">Adresse</h3>
                <p class="text-base text-gray-500 mb-4">Venez nous rencontrer</p>
                <span class="text-gray-600">Ville d'Uvira (RDC)</span>
                <span class="text-gray-600">Q. Rombe 2, Avenue Orthodoxe</span>
            </div>
        </div>
    </div>
</div>

<!-- Social & Hours Section -->
<div class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            <!-- Social Media -->
            <div>
                <h2 class="text-3xl font-extrabold text-gray-900 mb-8">Nos réseaux sociaux</h2>
                <div class="grid grid-cols-2 gap-6">
                    {% for platform, url in contactInfo.social %}
                    <a href="{{ url }}" target="_blank" class="group flex items-center space-x-4 p-4 rounded-lg border border-gray-200 hover:border-amber-300 hover:bg-amber-50 transition-colors">
                        <div class="flex-shrink-0 h-10 w-10 rounded-full bg-amber-100 flex items-center justify-center text-amber-600 group-hover:bg-amber-200 transition-colors">
                            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                                {% if platform == 'twitter' %}
                                    <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
                                {% elseif platform == 'facebook' %}
                                    <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
                                {% elseif platform == 'linkedin' %}
                                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"></path>
                                {% endif %}
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-lg font-medium text-gray-900 capitalize">{{ platform }}</h3>
                            <p class="text-gray-500 text-sm">Nous suivre</p>
                        </div>
                    </a>
                    {% endfor %}
                </div>
            </div>

            <!-- Opening Hours -->
            <div>
                <h2 class="text-3xl font-extrabold text-gray-900 mb-8">Horaires d'ouverture</h2>
                <div class="bg-gray-50 rounded-xl p-6">
                    <ul class="divide-y divide-gray-200">
                        {% for day, hours in contactInfo.hours %}
                        <li class="py-4 flex justify-between">
                            <span class="font-medium text-gray-900">{{ day }}</span>
                            <span class="text-gray-600">{{ hours }}</span>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Donation Section -->
<div class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
                <span class="block">Soutenez notre communauté</span>
            </h2>
            <p class="mt-4 max-w-2xl text-xl text-gray-500 mx-auto">
                Votre soutien nous aide à maintenir et améliorer nos services.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
            <!-- PayPal Donation -->
            <div class="donation-card rounded-xl p-8 text-white hover-scale">
                <div class="flex items-center justify-center h-12 w-12 rounded-md bg-white bg-opacity-20 mb-6">
                    <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M7.5 11.5h1.5v-4h-1.5v4zm3.5 0h1.5v-4h-1.5v4zm3.5 0h1.5v-4h-1.5v4zm-10.5-6v8h16v-8h-16zm16-2h-16c-1.1 0-2 0.9-2 2v8c0 1.1 0.9 2 2 2h16c1.1 0 2-0.9 2-2v-8c0-1.1-0.9-2-2-2z"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-bold mb-4">Don via PayPal</h3>
                <p class="mb-6 opacity-90">Soutenez-nous en quelques clics avec PayPal</p>
                <a href="https://paypal.com/donate" target="_blank" class="inline-flex items-center px-6 py-3 border border-transparent text-sm font-medium rounded-md text-amber-700 bg-white hover:bg-gray-100">
                    Faire un don
                </a>
            </div>

            <!-- Alternative Donation -->
            <div class="bg-white rounded-xl p-8 shadow-lg hover-scale">
                <div class="flex items-center justify-center h-12 w-12 rounded-md bg-amber-100 text-amber-600 mb-6">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-4">Pas de PayPal ?</h3>
                <p class="text-gray-600 mb-6">Envoyez-nous un email pour d'autres options de paiement</p>
                <a href="mailto:tumainiafricanews@gmail.com" class="inline-flex items-center px-6 py-3 border border-transparent text-sm font-medium rounded-md text-white bg-amber-600 hover:bg-amber-700">
                    Nous écrire
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Map Section -->
<div class="bg-white py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="rounded-xl overflow-hidden shadow-lg">
            <iframe 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2624.99144060821!2d2.292292615509614!3d48.85837360866186!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66e2964e34e2d%3A0x8ddca9ee380ef7e0!2sTour%20Eiffel!5e0!3m2!1sfr!2sfr!4v1623258136838!5m2!1sfr!2sfr" 
                width="100%" 
                height="450" 
                style="border:0;" 
                allowfullscreen="" 
                loading="lazy"
                class="filter grayscale(50%) contrast(1.2)">
            </iframe>
        </div>
    </div>
</div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Les articles de {{ user.firstName ~ " " ~ user.lastName  }}{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-gradient-to-br from-slate-700 via-orange-900 to-slate-900 py-2 shadow-md">
        <div class="container mx-auto px-2">
            <h1 class="text-2xl font-bold text-white">Profil de l'auteur</h1>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8">
        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Sidebar - Profil -->
            <div class="lg:w-1/3">
                <div class="bg-white rounded-lg shadow-md overflow-hidden sticky top-4">
                    <!-- Photo de profil -->
                    <div class="bg-amber-100 p-6 flex justify-center">
                        <img src="{{ user.avatar }}" alt="{{ user.firstName }} {{ user.lastName }}" 
                             class="w-32 h-32 rounded-full border-4 border-white shadow-md">
                    </div>
                    
                    <!-- Infos utilisateur -->
                    <div class="p-6">
                        <h2 class="text-2xl font-bold text-gray-800">{{ user.firstName }} {{ user.lastName }}</h2>
                        <p class="text-amber-600 mb-4">Développeur Symfony Senior</p>
                        
                        <p class="text-gray-600 mb-4">{{ user.bio }}</p>
                        
                        <div class="space-y-3 mb-6">
                            <div class="flex items-center text-gray-600">
                                <svg class="w-5 h-5 mr-2 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                                {{ user.location }}
                            </div>
                            <div class="flex items-center text-gray-600">
                                <svg class="w-5 h-5 mr-2 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                                </svg>
                                <a href="https://{{ user.website }}" class="hover:text-amber-600">{{ user.website }}</a>
                            </div>
                        </div>
                        
                        <!-- Stats -->
                        <div class="grid grid-cols-3 gap-4 text-center mb-6">
                            <div class="bg-amber-50 p-3 rounded-lg">
                                <div class="text-amber-800 font-bold">{{ user.stats.articles }}</div>
                                <div class="text-xs text-gray-500">Articles</div>
                            </div>
                            <div class="bg-amber-50 p-3 rounded-lg">
                                <div class="text-amber-800 font-bold">{{ user.stats.followers }}</div>
                                <div class="text-xs text-gray-500">Abonnés</div>
                            </div>
                            <div class="bg-amber-50 p-3 rounded-lg">
                                <div class="text-amber-800 font-bold">{{ user.stats.following }}</div>
                                <div class="text-xs text-gray-500">Abonnements</div>
                            </div>
                        </div>
                        
                        <!-- Social -->
                        <div class="flex space-x-4">
                            <a href="#" class="text-gray-500 hover:text-amber-600">
                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
                                </svg>
                            </a>
                            <a href="#" class="text-gray-500 hover:text-amber-600">
                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                    <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
                                </svg>
                            </a>
                            <a href="#" class="text-gray-500 hover:text-amber-600">
                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                    <path fill-rule="evenodd" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10c5.51 0 10-4.48 10-10S17.51 2 12 2zm6.605 4.61a8.502 8.502 0 011.93 5.314c-.281-.054-3.101-.629-5.943-.271-.065-.141-.12-.293-.184-.445a25.416 25.416 0 00-.564-1.236c3.145-1.28 4.577-3.124 4.761-3.362zM12 3.475c2.17 0 4.154.813 5.662 2.148-.152.216-1.443 1.941-4.48 3.08-1.399-2.57-2.95-4.675-3.189-5A8.687 8.687 0 0112 3.475zm-3.633.803a53.896 53.896 0 013.167 4.935c-3.992 1.063-7.517 1.04-7.896 1.04a8.581 8.581 0 014.729-5.975zM3.453 12.01v-.26c.37.01 4.512.065 8.775-1.215.25.477.477.965.694 1.453-.109.033-.228.065-.336.098-4.404 1.42-6.747 5.303-6.942 5.629a8.522 8.522 0 01-2.19-5.705zM12 20.547a8.482 8.482 0 01-5.239-1.8c.152-.315 1.888-3.656 6.703-5.337.022-.01.033-.01.054-.022a35.318 35.318 0 011.823 6.475 8.4 8.4 0 01-3.341.684zm4.761-1.465c-.086-.52-.542-3.015-1.659-6.084 2.679-.423 5.022.271 5.314.369a8.468 8.468 0 01-3.655 5.715z" clip-rule="evenodd"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Main Content - Articles -->
            <div class="lg:w-2/3">
                <div class="mb-8">
                    <h2 class="text-2xl font-bold text-gray-800 mb-4">Mes articles récents</h2>
                    <p class="text-gray-600">Découvrez mes dernières publications sur Symfony, PHP et le développement web.</p>
                </div>
                
                <!-- Liste des articles -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                    {% for article in articles %}
                    <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                        <img src="{{ article.image }}" alt="{{ article.title }}" class="w-full h-48 object-cover">
                        <div class="p-6">
                            <div class="flex justify-between items-center mb-2">
                                <span class="px-3 py-1 bg-amber-100 text-amber-800 text-xs font-semibold rounded-full">{{ article.category }}</span>
                                <span class="text-xs text-gray-500">{{ article.readTime }}</span>
                            </div>
                            <h3 class="text-xl font-bold text-gray-800 mb-2 hover:text-amber-600 transition-colors">
                                <a href="#">{{ article.title }}</a>
                            </h3>
                            <p class="text-gray-600 mb-4">{{ article.excerpt }}</p>
                            <div class="flex justify-between items-center text-sm">
                                <span class="text-gray-500">{{ article.date|date('d M Y') }}</span>
                                <div class="flex items-center text-gray-500">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                                    </svg>
                                    {{ article.likes }}
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                
                <!-- Pagination -->
                {% if totalPages > 1 %}
                <div class="flex justify-center">
                    <nav class="flex items-center space-x-2">
                        {% if currentPage > 1 %}
                            <a href="{{ path('app_client_user_article', {'page': currentPage - 1}) }}" 
                               class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-amber-50">
                                Précédent
                            </a>
                        {% endif %}
                        
                        {% for i in 1..totalPages %}
                            <a href="{{ path('app_client_user_article', {'page': i}) }}" 
                               class="px-4 py-2 border rounded-md {% if i == currentPage %}bg-amber-600 text-white border-amber-600{% else %}border-gray-300 text-gray-700 hover:bg-amber-50{% endif %}">
                                {{ i }}
                            </a>
                        {% endfor %}
                        
                        {% if currentPage < totalPages %}
                            <a href="{{ path('app_client_user_article', {'page': currentPage + 1}) }}" 
                               class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-amber-50">
                                Suivant
                            </a>
                        {% endif %}
                    </nav>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

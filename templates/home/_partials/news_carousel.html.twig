<div class="weekly3-news-area py-20 bg-gray-50" id="news-carousel">
    <div class="container mx-auto px-4">
        <div class="mb-8 text-center">
            <h2 class="text-3xl font-bold text-gray-800 mb-2">Actualités Récentes</h2>
        </div>
        
        <div class="carousel-container overflow-hidden">
            <div class="carousel-track flex transition-transform duration-700" style="transform: translateX(0%)">
                {% for news in newsItems %}
                    <div class="carousel-slide w-1/4 flex-shrink-0 px-3">
                        <div class="weekly3-single group cursor-pointer">
                            <div class="weekly3-img overflow-hidden rounded-lg mb-4">
                                <img src="{{ news.image }}" 
                                    alt="{{ news.title }}"
                                    class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110">
                            </div>
                            <div class="weekly3-caption">
                                <h4 class="mb-2">
                                    <a href="{{ news.link }}" 
                                    class="text-lg font-semibold text-gray-800 hover:text-blue-600 transition-colors duration-300">
                                        {{ news.title }}
                                    </a>
                                </h4>
                                <p class="text-gray-500 text-sm">{{ news.date }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        
        <!-- Navigation -->
        <button class="carousel-prev absolute left-2 top-1/2">‹</button>
        <button class="carousel-next absolute right-2 top-1/2">›</button>
        
        <!-- Dots -->
        <div class="carousel-dots flex justify-center mt-6"></div>
    </div>
</div>

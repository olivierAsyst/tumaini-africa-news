<div class="weekly3-single group cursor-pointer">
    <div class="weekly3-img overflow-hidden rounded-lg mb-4">
        <img src="{{ news.image }}" 
             alt="{{ news.title }}"
             class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110">
    </div>
    <div class="weekly3-caption">
        <h4 class="mb-2">
            <a href="{{ news.link }}" 
               class="text-lg font-semibold text-gray-800 hover:text-blue-600 transition-colors duration-300">
                {{ news.title }}
            </a>
        </h4>
        <p class="text-gray-500 text-sm">{{ news.date }}</p>
    </div>
</div>
